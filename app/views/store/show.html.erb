<h1><%= @product.title %></h1>

<p> <%= image_tag @product.image_url %> </p>

<p><%= @product.description %></p>

<p> <%= @product.price %> </p>


<!--Can add more fields to stripe-script -->
<%= form_tag charges_path do %>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
        data-name="<%= @product.title %>"
        data-description="<%= @product.description %>"
        data-label="Claim"
        data-shipping-address="Enter shipping address here."
        data-amount=<%= (@product.price * 100).to_i %>>
     </script>
    <% @product.skus.each do |sku| %>
       <%= label_tag :sku, sku.size %>
        <%= radio_button_tag :sku, sku %>
        <% end %>
    <%= hidden_field_tag :product, @product %>
    <%= hidden_field_tag :quantity, '1' %>
    <%= hidden_field_tag :sku, sku %>
<% end %>

<p> </p>