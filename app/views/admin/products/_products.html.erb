<% @products.each do |product| %>
    <div class="listing">
      <%= image_tag product.image_url, class: 'list_image' %>
      <%= product.title %>
      <%= product.description %>
      <%= product.price %>
      <div class="buttons">
        <%= link_to 'Show', product %>
        <%= link_to 'Edit', edit_admin_product_path(product) %>
        <%= link_to 'Destroy', admin_product_path(product) %>
      </div>
    </div>

<% end %>