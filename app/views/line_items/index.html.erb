<h1>LineItems#index</h1>
<p>Find me in app/views/line_items/index.html.erb</p>

<div>
  <% @line_items.each do |line_item| %>
    <p>Product: <%= line_item.product_id  %></p>
    <p>Cart: <%= line_item.cart_id %></p>
      <%= link_to 'Show', line_item %>
      <%= link_to 'Edit', edit_line_item_path(line_item) %>
      <%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>

<%= link_to 'New Line item', new_line_item_path %>
